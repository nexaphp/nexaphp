# Application Environment
APP_NAME="NexaPHP Application"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nexaphp
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Application Key (generate with: php -r "echo bin2hex(random_bytes(32));")
APP_KEY=your-secure-random-key-here

# Trusted Proxies (for load balancers)
TRUSTED_PROXIES=

# Logging Configuration
LOG_LEVEL=debug
LOG_MAX_FILES=7
LOG_CONSOLE=true

# Optional: External logging services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# SENTRY_DSN=https://your-sentry-dsn@oorg.ingest.sentry.io/...